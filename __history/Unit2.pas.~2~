var
  form2: TForm2;
  s : TStringList;
implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
begin
 s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Фамилия.txt');
 Label1.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Имя.txt');
 Label2.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Отчество.txt');
 Label3.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Номер.txt');
 Label10.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Почта.txt');
 Label11.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Близкие люди.txt');
 Label12.Caption := s.Text;
   s.Free;
   s.Create;
 s.LoadFromFile('db/'+edit1.Text+'/Адрес.txt');
 Label13.Caption := s.Text;
   s.Free;
end;

end.
